<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">


    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <photran.me.parallaxviewpage.views.PTPageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/ptpageview"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:currentPageIndicatorTintColor="@color/colorPrimary"
        app:heightItem="32"
        app:numberOfPages="4"
        app:pageIndicatorTintColor="@color/silver"
        app:widthItem="32" />


</RelativeLayout>
